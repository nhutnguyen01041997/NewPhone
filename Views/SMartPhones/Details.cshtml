@model NewPhone.Models.SMartPhone

@{
    ViewData["Title"] = "Chi tiết";
}

<h1>Chi tiết sản phẩm</h1>

<div>
    <h4>SMartPhone</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tên sản phẩm
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            Ngày sản xuất
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReleaseDate)
        </dd>
        <dt class="col-sm-2">
            Hãng điện thoại
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Genre)
        </dd>
        <dt class="col-sm-2">
            Giá bán
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            Đánh giá
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProfilePicture)
            
        </dd>
    </dl>
</div>
<div>
    
    <a asp-action="Index">Quay lại</a>
</div>
