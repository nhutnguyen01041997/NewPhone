@model NewPhone.Models.SMartPhoneGenreViewModel

@{
    ViewData["Title"] = "Thêm mới sản phẩm";
}
<!DOCTYPE html>
<html lang="en">
<h1>Thêm mới sản phẩm</h1>
<form asp-controller="SMartPhones" asp-action="Index" method="get">
    <p>
        <select asp-for="SMartPhoneGenre" asp-items="Model.Genres">
            <option value="">Hãng điện thoại</option>
        </select>
        Tên sản phẩm: <input type="text" name="SearchString" />
        <input type="submit" value="Tìm kiếm" />
    </p>
</form>
<p>
    <a asp-action="Create">Tạo mới</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SMartPhones[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SMartPhones[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SMartPhones[0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SMartPhones[0].Price)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.SMartPhones)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>


            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <img src="~/images/@item.ProfilePicture"
                     class="rounded-circle"
                     height="40" width="40"
                     asp-append-version="true" />
                @item.Title
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id"> Edit</a>|
                <a asp-action="Details" asp-route-id="@item.Id">Details</a>|
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
            }
        </tbody>
</table>


